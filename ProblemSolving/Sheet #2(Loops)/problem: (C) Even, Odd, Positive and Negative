#include <bits/stdc++.h>
using namespace std;
 
int main() {
    int num,num2,pos,neg,even,odd;
    pos = 0;
    neg = 0;
    even = 0;
    odd = 0;
    cin >> num;
    for (int i =1;i <= num; i++) {
        cin >> num2;
        if (num2 % 2 == 0) {
            even ++;
        }
        else {
            odd ++;
        }
        if (num2 > 0) {
            pos ++;
        }
        else if (num2 < 0) {
            neg ++;
        }
    }
    cout << "Even: " << even << endl;
    cout << "Odd: " << odd << endl;
    cout << "Positive: " << pos << endl;
    cout << "Negative: " << neg << endl;
}
